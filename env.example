# AllInConverter - Environment Configuration Example
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=AllInConverter
NEXT_PUBLIC_SITE_EMAIL=info@allinconverter.com

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Cloudflare R2 Storage (for production)
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=aic-files
R2_PUBLIC_URL=https://pub-xxx.r2.dev

# File Upload Limits
MAX_FILE_SIZE_MB=512
MAX_PARALLEL_JOBS=1
JOB_TIMEOUT_SECONDS=120

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN=

# Ad Network Configuration
NEXT_PUBLIC_AD_NETWORK=test
AD_INTERSTITIAL_ENABLED=true
