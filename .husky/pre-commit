echo "🔍 Running pre-commit checks..."

# Run linting
echo "📝 Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ ESLint failed. Please fix the issues before committing."
  exit 1
fi

# Update project context
echo "📊 Updating project context..."
npm run context:update
if [ $? -ne 0 ]; then
  echo "❌ Project context update failed."
  exit 1
fi

# Check if project_context.json was modified
if git diff --cached --name-only | grep -q "project_context.json"; then
  echo "✅ Project context updated and staged for commit."
else
  echo "ℹ️  No changes to project context."
fi

echo "✅ Pre-commit checks passed!"